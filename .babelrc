{
    "presets": [
        [
            "es2015",
            {
                "modules": false
            }
        ],
        "stage-2",
        "react"
    ],
    "plugins": [
        "transform-class-properties"
    ],
    "env": {
        "cjs": {
            "plugins": [
                "transform-es2015-modules-commonjs"
            ]
        },
        "test": {
            "plugins": [
                "transform-es2015-modules-commonjs",
                "istanbul"
            ]
        }
    }
}